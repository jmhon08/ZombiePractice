<p>
  <h1><%= @article.name %></h1> <i class="time"><%= @article.created_at.strftime("%B %d, %Y %H:%M") %></i>
</p>
-----------------------------------------
<p>
  <%= simple_format @article.body %>
</p>

-----------------------------------------
<div>
	<h4>Comments</h3>

	<% @comments.each do |comment| %>
		<b><%= comment.zombie.name if comment.zombie %>: </b><%= comment.body %> <i>(<%= comment.created_at.strftime("%B %d, %Y %H:%M") %> )</i><br/>
	<% end %>

	<%= form_for([@article, @new_comment]) do |f| %>
	  <p>
	    <%= f.text_area :body, cols: 80, rows: 3 %>
	  </p>
	  <p>
	    <%= f.submit %>
	  </p>
	<% end %>
</div>

<br /><br /><br />
<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
