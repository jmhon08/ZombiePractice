<h1>All Articles</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th>Author</th>
      <th>Created at</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td data-link="<%= article_path(article) %>"><%= article.name %></td>
        <td data-link="<%= article_path(article) %>"><%= truncate(article.body, length: 200) %></td>
        <td><%= link_to article.zombie.name, zombie_path(article.zombie)  %></td>
        <td><%= article.created_at. strftime("%B %d, %Y %H:%M") %>
        <td><%= link_to 'Edit', edit_article_path(article) if current_zombie.admin? %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } if current_zombie.admin? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

